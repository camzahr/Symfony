{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>List of cars</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        {{ advert.price }} $ per month,
        by {{ advert.author }},
        the {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

  <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Date</th>
                <th>Publishedat</th>
                <th>price</th>
            </tr>
        </thead>
        <tbody>
        {% for advert in listAdverts %}
            <tr>
                <td>{{ advert.id }}</a></td>
                <td>{{ advert.title }}</td>
                <td>{{ advert.author }}</td>
                <td>{{ advert.date|date('d/m/Y') }}</td>
                <td>{{ advert.price }}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

